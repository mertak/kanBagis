<% provide(:title, "Log in") %>
<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :tcNo %>
      <%= f.text_field :tcNo, class: 'form-control' %>

      <%= f.label :KanGrubu %>
      <%= f.select :bloodGroup,( [['A RH+'],
                                 ['A RH-'], 
                                 ['B RH+'], 
                                 ['B RH -'], 
                                 ['AB RH+'], 
                                 ['AB RH-'], 
                                 ['0 RH+'], 
                                 ['0 RH-'],
	         		 ] 
				 ),class: 'form-control'%>
      
     <p> <%= f.submit "Log in", class: "btn btn-primary" %></p>
    <% end %>

    <p>Kaydiniz yok mu? <%= link_to "Sign up!", signup_path %></p>
  </div>
</div>
