<% provide(:title, "Ayarlar") %>

<h2>Bilgilerinizi Güncelleyin</h2>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <p>
    <%= form_for(@admin) do |f| %>
      <%= render 'shared/admin_error_messages' %>
      
      <%= f.label "İsim" %>
      <%= f.text_field :name, class: 'form-control' %>
      
      <%= f.label "E-posta" %>
      <%= f.text_field :email , class: 'form-control'%>

      <%= f.label "Şifre" %>
      <%= f.password_field :password, :placeholder =>"Minimum 6 karakter",
                           class: 'form-control'%>
      <%= f.submit "Kaydet", class: "btn btn-primary" %>
    <% end %>
    </p>
  </div>
</div>
