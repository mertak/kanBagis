<% provide(:title, 'Sign up') %>
<h1>Kaydol</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@donor) do |f| %>
      <%= render 'shared/error_messages' %>
      
      <%= f.label "İsim" %>
      <%= f.text_field :name, class: 'form-control' %>
      
      <%= f.label :Soyisim %>
      <%= f.text_field :lastname , class: 'form-control'%>

      <%= f.label "Şifre" %>
      <%= f.password_field :password, :placeholder =>"Minimum 6 karakter",
                           class: 'form-control'%>
      
      <%= f.label "Şifre Doğrulama" %>
      <%= f.password_field :password_confirmation, class: 'form-control'%>
 
      <%= f.label :Tel %>
      <%= f.phone_field :tel, :placeholder =>"0 yazmadan giriniz!",
                        class: 'form-control'%>

      <%= f.label "TC Kimlik Numarası" %>
      <%= f.text_field :tcNo , class: 'form-control'%>
      
      <%= f.label "Kan Grubu" %>
      <%= f.select :bloodGroup,( [['A RH+'],
                                 ['A RH-'], 
                                 ['B RH+'], 
                                 ['B RH -'], 
                                 ['AB RH+'], 
                                 ['AB RH-'], 
                                 ['0 RH+'], 
                                 ['0 RH-'],
	         		 ] 
				 ),class: 'form-control'%>
      
      <%= f.label "Kan Türü" %>
      <%= f.select :bloodType , ([['Afarez'],
				 ['Standart']]
				 ),class: 'form-control'%>

      <%= f.label :Yer %>
      <%= f.text_field :location , class: 'form-control'%>

      <%= f.label "Son Bağış Zamanı" %>
      <%= f.date_select :donateTime,
                         use_month_numbers: true, prompt: { day: 'Gün', month: 'Ay', year: 'Yıl' },
                        :start_year => Date.current.year, :end_year => 1920,
                        class: 'form-control'%>

      <p> <%= f.submit "Bağışcı oluştur", class: "btn btn-success" %></p>

    <% end %>
    </p>
  </div>
</div>
