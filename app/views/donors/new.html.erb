<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@donor) do |f| %>
      <%= render 'shared/error_messages' %>
      <p>
      <%= f.label :isim %>
      <%= f.text_field :name, class: 'form-control' %>
      
      <%= f.label :soyisim %>
      <%= f.text_field :lastname , class: 'form-control'%>
   
      <%= f.label :tel %>
      <%= f.text_field :tel , class: 'form-control'%>
      
      <%= f.label :TCNo %>
      <%= f.text_field :tcNo , class: 'form-control'%>
      
      <%= f.label :KanGrubu %>
      <%= f.select :bloodGroup,( [['A RH+'],
                                 ['A RH-'], 
                                 ['B RH+'], 
                                 ['B RH -'], 
                                 ['AB RH+'], 
                                 ['AB RH-'], 
                                 ['0 RH+'], 
                                 ['0 RH-'],
	         		 ] 
				 ),class: 'form-control'%>
      
      <%= f.label :KanTürü %>
      <%= f.select :bloodType , ([['afarez'],
				 ['standart']]
				 ),class: 'form-control'%>

      <%= f.label :Yer %>
      <%= f.text_field :location , class: 'form-control'%>

      <%= f.label :BagisZamani %>
      <%= f.text_field :donateTime , class: 'form-control'%>

    <p>
      <%= f.submit "Create a donor account", class: "btn btn-primary" %>
    <% end %>
    </p>
  </div>
</div>

